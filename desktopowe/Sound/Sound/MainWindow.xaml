<Window x:Class="Sound.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sound"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <Button Name="btnWczytaj" Content="Wczytaj dzwięk" Width="150" Height="30" Margin="20" Click="btnWczytaj_Click"/>
            <Button Name="btnPlay" Content="Zacznij dzwięk" Width="150" Height="30" Margin="20" Click="btnPlay_Click"/>
            <Button Name="btnPause" Content="Zatrzymaj dzwięk" Width="150" Height="30" Margin="20" Click="btnPause_Click"/>
            <Button Name="btnStop" Content="Zatrzymaj dzwięk" Width="150" Height="30" Margin="20" Click="btnStop_Click"/>
        </StackPanel>
    </Grid>
</Window>
